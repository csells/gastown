<!DOCTYPE html>
<html lang="en" data-theme="system">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gas Town Dashboard</title>
  <script src="https://unpkg.com/htmx.org@1.9.10"></script>
  <style>
    /* Theme color definitions */
    :root {
      /* Light theme colors */
      --bg-color-light: #f5f5f5;
      --text-color-light: #1a1a2e;
      --bg-secondary-light: #e0e0e0;
      --border-color-light: #4a9eff;
      --table-bg-light: #ffffff;
      --table-header-bg-light: #e8e8e8;
      --table-border-light: #d0d0d0;
      --table-hover-light: rgba(74, 158, 255, 0.1);
      --code-bg-light: #e8e8e8;
      --empty-state-light: #666;

      /* Dark theme colors */
      --bg-color-dark: #1a1a2e;
      --text-color-dark: #eaeaea;
      --bg-secondary-dark: #2d2d44;
      --border-color-dark: #4a9eff;
      --table-bg-dark: transparent;
      --table-header-bg-dark: #2d2d44;
      --table-border-dark: #2d2d44;
      --table-hover-dark: rgba(74, 158, 255, 0.1);
      --code-bg-dark: #2d2d44;
      --empty-state-dark: #888;
    }

    /* System theme (respects OS preference) */
    html[data-theme="system"] {
      --bg-color: var(--bg-color-dark);
      --text-color: var(--text-color-dark);
      --bg-secondary: var(--bg-secondary-dark);
      --border-color: var(--border-color-dark);
      --table-bg: var(--table-bg-dark);
      --table-header-bg: var(--table-header-bg-dark);
      --table-border: var(--table-border-dark);
      --table-hover: var(--table-hover-dark);
      --code-bg: var(--code-bg-dark);
      --empty-state-color: var(--empty-state-dark);
    }

    @media (prefers-color-scheme: light) {
      html[data-theme="system"] {
        --bg-color: var(--bg-color-light);
        --text-color: var(--text-color-light);
        --bg-secondary: var(--bg-secondary-light);
        --border-color: var(--border-color-light);
        --table-bg: var(--table-bg-light);
        --table-header-bg: var(--table-header-bg-light);
        --table-border: var(--table-border-light);
        --table-hover: var(--table-hover-light);
        --code-bg: var(--code-bg-light);
        --empty-state-color: var(--empty-state-light);
      }
    }

    /* Dark theme (forced) */
    html[data-theme="dark"] {
      --bg-color: var(--bg-color-dark);
      --text-color: var(--text-color-dark);
      --bg-secondary: var(--bg-secondary-dark);
      --border-color: var(--border-color-dark);
      --table-bg: var(--table-bg-dark);
      --table-header-bg: var(--table-header-bg-dark);
      --table-border: var(--table-border-dark);
      --table-hover: var(--table-hover-dark);
      --code-bg: var(--code-bg-dark);
      --empty-state-color: var(--empty-state-dark);
    }

    /* Light theme (forced) */
    html[data-theme="light"] {
      --bg-color: var(--bg-color-light);
      --text-color: var(--text-color-light);
      --bg-secondary: var(--bg-secondary-light);
      --border-color: var(--border-color-light);
      --table-bg: var(--table-bg-light);
      --table-header-bg: var(--table-header-bg-light);
      --table-border: var(--table-border-light);
      --table-hover: var(--table-hover-light);
      --code-bg: var(--code-bg-light);
      --empty-state-color: var(--empty-state-light);
    }

    body {
      background-color: var(--bg-color);
      color: var(--text-color);
      font-family: 'Courier New', monospace;
      margin: 0;
      padding: 2rem;
      transition: background-color 0.3s ease, color 0.3s ease;
    }

    .container {
      max-width: 1400px;
      margin: 0 auto;
    }

    .activity-dot {
      width: 12px;
      height: 12px;
      border-radius: 50%;
      display: inline-block;
      margin-right: 8px;
    }

    .activity-green {
      background-color: #00ff00;
      box-shadow: 0 0 8px #00ff00;
    }

    .activity-yellow {
      background-color: #ffff00;
      box-shadow: 0 0 8px #ffff00;
    }

    .activity-red {
      background-color: #ff0000;
      box-shadow: 0 0 8px #ff0000;
    }

    .activity-unknown {
      background-color: #666666;
    }

    .progress-bar {
      background-color: var(--bg-secondary);
      height: 20px;
      border-radius: 4px;
      overflow: hidden;
      position: relative;
      flex: 1;
      transition: background-color 0.3s ease;
    }

    .progress-fill {
      background-color: #4a9eff;
      height: 100%;
      transition: width 0.3s ease;
    }

    .progress-container {
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .work-status {
      padding: 4px 12px;
      border-radius: 4px;
      font-size: 12px;
      font-weight: bold;
      text-transform: uppercase;
      display: inline-block;
    }

    .work-status.complete { background-color: #00aa00; }
    .work-status.active { background-color: #4a9eff; }
    .work-status.stale { background-color: #ffaa00; }
    .work-status.stuck { background-color: #ff4444; }
    .work-status.waiting { background-color: #666666; }

    .mq-green { background-color: rgba(0, 170, 0, 0.2); }
    .mq-yellow { background-color: rgba(255, 170, 0, 0.2); }
    .mq-red { background-color: rgba(255, 68, 68, 0.2); }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 2rem;
    }

    th {
      text-align: left;
      padding: 12px;
      background-color: var(--table-header-bg);
      border-bottom: 2px solid var(--border-color);
      transition: background-color 0.3s ease;
    }

    td {
      padding: 12px;
      border-bottom: 1px solid var(--table-border);
      transition: border-color 0.3s ease;
    }

    tr:hover {
      background-color: var(--table-hover);
    }

    tr.clickable {
      cursor: pointer;
    }

    tr.clickable:hover {
      background-color: rgba(74, 158, 255, 0.2);
    }

    tr.selected {
      background-color: rgba(74, 158, 255, 0.3);
      border-left: 3px solid #4a9eff;
    }

    h1 {
      color: #4a9eff;
      margin-bottom: 2rem;
      font-size: 32px;
    }

    h2 {
      color: #4a9eff;
      margin-top: 3rem;
      margin-bottom: 1rem;
      font-size: 24px;
    }

    h3 {
      color: #4a9eff;
      margin-top: 2rem;
      margin-bottom: 1rem;
      font-size: 20px;
    }

    h4 {
      color: var(--text-color);
      margin-top: 1.5rem;
      margin-bottom: 0.75rem;
      font-size: 16px;
      opacity: 0.9;
    }

    a {
      color: #4a9eff;
      text-decoration: none;
    }

    a:hover {
      text-decoration: underline;
    }

    code {
      background-color: var(--code-bg);
      padding: 2px 6px;
      border-radius: 3px;
      font-family: 'Courier New', monospace;
      transition: background-color 0.3s ease;
    }

    .empty-state {
      color: var(--empty-state-color);
      font-style: italic;
      padding: 1rem 0;
    }

    /* Theme toggle icon */
    .theme-toggle {
      width: 16px;
      height: 16px;
      cursor: pointer;
      opacity: 0.6;
      transition: opacity 0.2s ease;
      flex-shrink: 0;
    }

    .theme-toggle:hover {
      opacity: 1;
    }

    .header-row {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
    }

    .header-row h1 {
      margin: 0;
    }

    /* Rig details panel */
    #rig-details {
      margin-top: 1rem;
      padding: 1rem;
      background-color: var(--bg-secondary);
      border-radius: 8px;
      border-left: 3px solid #4a9eff;
    }

    #rig-details:empty {
      display: none;
    }

    .rig-details h3 {
      margin-top: 0;
    }

    .rig-details h4 {
      border-bottom: 1px solid var(--table-border);
      padding-bottom: 0.5rem;
    }

    details summary {
      padding: 0.5rem;
      background-color: var(--table-header-bg);
      border-radius: 4px;
    }

    details summary:hover {
      background-color: var(--table-hover);
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header-row">
      <h1>Gas Town Dashboard</h1>
      <span id="theme-toggle" class="theme-toggle" title="System theme (click to change)">
        <svg viewBox="0 0 24 24" fill="currentColor" style="width:100%;height:100%">
          <path id="theme-icon" d="M12 3a9 9 0 109 9c0-.46-.04-.92-.1-1.36a5.389 5.389 0 01-4.4 2.26 5.403 5.403 0 01-3.14-9.8c-.44-.06-.9-.1-1.36-.1z"/>
        </svg>
      </span>
    </div>

    <!-- Convoys Section -->
    <h2>Convoys</h2>
    <% if (convoys.length === 0) { %>
      <p class="empty-state">No open convoys</p>
    <% } else { %>
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Status</th>
            <th>Progress</th>
            <th>Activity</th>
          </tr>
        </thead>
        <tbody>
          <% convoys.forEach(convoy => { %>
            <tr>
              <td><code><%= convoy.id %></code></td>
              <td><%= convoy.title %></td>
              <td>
                <span class="work-status <%= convoy.workStatus %>">
                  <%= convoy.workStatus %>
                </span>
              </td>
              <td>
                <div class="progress-container">
                  <div class="progress-bar">
                    <div class="progress-fill" style="width: <%= convoy.total > 0 ? (convoy.completed / convoy.total * 100) : 0 %>%"></div>
                  </div>
                  <span style="min-width: 3rem; text-align: right;"><%= convoy.progress %></span>
                </div>
              </td>
              <td>
                <span class="activity-dot activity-<%= convoy.lastActivity.color %>"></span>
                <%= convoy.lastActivity.text %>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } %>

    <!-- Merge Queue Section -->
    <h2>Merge Queue</h2>
    <% if (mergeQueue.length === 0) { %>
      <p class="empty-state">No open pull requests</p>
    <% } else { %>
      <table>
        <thead>
          <tr>
            <th>Repo</th>
            <th>PR</th>
            <th>Title</th>
            <th>CI Status</th>
            <th>Mergeable</th>
          </tr>
        </thead>
        <tbody>
          <% mergeQueue.forEach(pr => { %>
            <tr class="<%= pr.colorClass %>">
              <td><%= pr.repo %></td>
              <td><a href="<%= pr.url %>" target="_blank">#<%= pr.number %></a></td>
              <td><%= pr.title %></td>
              <td><%= pr.ciStatus %></td>
              <td><%= pr.mergeable %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } %>

    <!-- Town Beads Section -->
    <h2>Town Beads</h2>
    <% if (townBeads.length === 0) { %>
      <p class="empty-state">No town-level beads</p>
    <% } else { %>
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Status</th>
            <th>Type</th>
          </tr>
        </thead>
        <tbody>
          <% townBeads.slice(0, 15).forEach(bead => { %>
            <tr>
              <td><code><%= bead.id %></code></td>
              <td><%= bead.title %></td>
              <td>
                <%
                  let statusClass = '';
                  if (bead.status === 'closed') statusClass = 'complete';
                  else if (bead.status === 'in_progress') statusClass = 'active';
                  else if (bead.status === 'open') statusClass = 'waiting';
                %>
                <span class="work-status <%= statusClass %>"><%= bead.status %></span>
              </td>
              <td><code><%= bead.issueType %></code></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
      <% if (townBeads.length > 15) { %>
        <p class="empty-state">Showing 15 of <%= townBeads.length %> beads</p>
      <% } %>
    <% } %>

    <!-- Rigs Section -->
    <h2>Rigs</h2>
    <% if (rigs.length === 0) { %>
      <p class="empty-state">No rigs configured</p>
    <% } else { %>
      <table>
        <thead>
          <tr>
            <th>Rig</th>
            <th>Polecats</th>
            <th>Crew</th>
            <th>Agents</th>
          </tr>
        </thead>
        <tbody>
          <% rigs.forEach(rig => { %>
            <tr class="clickable"
                hx-get="/rig/<%= rig.name %>"
                hx-target="#rig-details"
                hx-swap="innerHTML"
                onclick="selectRig(this)">
              <td><%= rig.name %></td>
              <td><%= rig.polecatCount %></td>
              <td><%= rig.crewCount %></td>
              <td>
                <% if (rig.agents.length > 0) { %>
                  <%= rig.agents.join(', ') %>
                <% } else { %>
                  <span style="color: var(--empty-state-color);">none</span>
                <% } %>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>

      <!-- Rig Details Panel (populated via HTMX) -->
      <div id="rig-details"></div>
    <% } %>
  </div>

  <script>
    // Theme toggle functionality
    (function() {
      const THEME_KEY = 'gastown-dashboard-theme';
      const THEMES = ['light', 'dark', 'system'];
      const ICONS = {
        light: 'M12 7c-2.76 0-5 2.24-5 5s2.24 5 5 5 5-2.24 5-5-2.24-5-5-5zM2 13h2c.55 0 1-.45 1-1s-.45-1-1-1H2c-.55 0-1 .45-1 1s.45 1 1 1zm18 0h2c.55 0 1-.45 1-1s-.45-1-1-1h-2c-.55 0-1 .45-1 1s.45 1 1 1zM11 2v2c0 .55.45 1 1 1s1-.45 1-1V2c0-.55-.45-1-1-1s-1 .45-1 1zm0 18v2c0 .55.45 1 1 1s1-.45 1-1v-2c0-.55-.45-1-1-1s-1 .45-1 1zM5.99 4.58a.996.996 0 00-1.41 0 .996.996 0 000 1.41l1.06 1.06c.39.39 1.03.39 1.41 0s.39-1.03 0-1.41L5.99 4.58zm12.37 12.37a.996.996 0 00-1.41 0 .996.996 0 000 1.41l1.06 1.06c.39.39 1.03.39 1.41 0a.996.996 0 000-1.41l-1.06-1.06zm1.06-10.96a.996.996 0 000-1.41.996.996 0 00-1.41 0l-1.06 1.06c-.39.39-.39 1.03 0 1.41s1.03.39 1.41 0l1.06-1.06zM7.05 18.36a.996.996 0 000-1.41.996.996 0 00-1.41 0l-1.06 1.06c-.39.39-.39 1.03 0 1.41s1.03.39 1.41 0l1.06-1.06z',
        dark: 'M12 3a9 9 0 109 9c0-.46-.04-.92-.1-1.36a5.389 5.389 0 01-4.4 2.26 5.403 5.403 0 01-3.14-9.8c-.44-.06-.9-.1-1.36-.1z',
        system: 'M20 3H4c-1.1 0-2 .9-2 2v11c0 1.1.9 2 2 2h3l-1 1v2h12v-2l-1-1h3c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 13H4V5h16v11z'
      };
      const html = document.documentElement;
      const toggle = document.getElementById('theme-toggle');
      const icon = document.getElementById('theme-icon');

      function getTheme() {
        return localStorage.getItem(THEME_KEY) || 'system';
      }

      function setTheme(theme) {
        html.setAttribute('data-theme', theme);
        localStorage.setItem(THEME_KEY, theme);
        icon.setAttribute('d', ICONS[theme]);
        toggle.title = theme.charAt(0).toUpperCase() + theme.slice(1) + ' theme (click to change)';
      }

      function cycleTheme() {
        const current = getTheme();
        const idx = THEMES.indexOf(current);
        const next = THEMES[(idx + 1) % THEMES.length];
        setTheme(next);
      }

      toggle.addEventListener('click', cycleTheme);
      setTheme(getTheme());
    })();

    // Rig selection functionality
    function selectRig(row) {
      // Remove selected class from all rig rows
      document.querySelectorAll('tr.clickable').forEach(r => r.classList.remove('selected'));
      // Add selected class to clicked row
      row.classList.add('selected');
    }
  </script>
</body>
</html>
